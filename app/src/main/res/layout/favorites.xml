<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="10dp"
    card_view:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_card_view_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp" />
        <!-- android:src="@drawable/placeholder" -->

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/recipe_card_view_image"
            android:textSize="30sp" />
            <!-- android:text="SDGDFHDHFHD" -->
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <ImageButton
        android:id="@+id/snackbar_action"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:paddingBottom="18dp"
        android:paddingLeft="18dp"
        android:paddingTop="18dp"
        android:textAllCaps="true"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:src="@drawable/cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/snackbar_text" />

    <TextView
        android:id="@+id/snackbar_text"
        android:layout_width="292dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp"
        android:background="#BCEB64"
        android:textColor="#FFFACD"
        android:text="@string/recipe_deleted"

        android:textSize="14sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

